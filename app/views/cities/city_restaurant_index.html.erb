<h1>Restaurants in <%= @city.name %></h1>

<%= link_to "Sort by name", "/cities/#{@city.id}/restaurants?sort=true" %>

<%= form_with(url: "/cities/#{@city.id}/restaurants", method: :get, local: true) do |form| %>
  <p><%= form.label :search %>
  <%= form.number_field :search, in: 1..5, step: 1 %>
  <%= form.submit "Submit" %></p>
<% end %>

<% @city_restaurants.each do |restaurant| %>
  <h3>Name: <%= restaurant.name %></h3>
  <p>Food Type: <%= restaurant.food_type %></p>
  <p>Alcohol?: <%= restaurant.alcohol_served %></p>
  <p>Rating: <%= restaurant.rating %></p>
  <p><%= link_to "Update #{restaurant.name}", "/restaurants/#{restaurant.id}/edit" %></p>
<% end %>
<%= link_to "Add New Restaurant", "/cities/#{@city.id}/restaurants/new" %>