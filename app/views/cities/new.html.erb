<%= form_with url: "/cities", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :population %>
  <%= form.text_field :population %>
  <%= form.label :metropolis %>
  <%= form.text_field :metropolis %>
  <%= form.submit 'Create City' %>
<% end %>